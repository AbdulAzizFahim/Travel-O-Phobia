<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorAppBackground"
    >

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="399dp"
        android:layout_height="150dp"
        android:layout_margin="4dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/hotelimageView"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:layout_marginTop="2dp"
            android:background="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/hoteltextView1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/btn_star_big_on" />


        <TextView
            android:id="@+id/hoteltextView1"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:text="Royal Tulip Resort"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/hoteltextView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/hotelimageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.189" />

        <TextView
            android:id="@+id/hotel_address_text1"
            android:layout_width="290dp"
            android:layout_height="21dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:text="Cox"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="italic"
            app:layout_constraintBottom_toTopOf="@+id/hoteltextView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toEndOf="@+id/hotelimageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.9" />

        <TextView
            android:id="@+id/hoteltextView2"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_marginTop="96dp"
            android:layout_marginBottom="4dp"
            android:paddingTop="11dp"
            android:text="Enjoy The Oceanview"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/hotel_address_text1"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
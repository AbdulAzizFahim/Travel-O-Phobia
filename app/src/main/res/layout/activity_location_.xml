<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Location_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7AEAEFEF"
        android:baselineAligned="false"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/Location_Image"
            android:layout_width="match_parent"
            android:layout_height="361dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/Location_Name_Text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="#020202"
            android:textSize="30sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/Location_Description_Text"
            android:layout_width="412dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="15dp" />

        <Button
            android:id="@+id/Pros_Button"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_round"
            android:text="Pros"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/Cons_Button"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_round"
            android:text="Cons"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/Trip_Review_Button"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_round"
            android:text="Trip Review"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/Bus_Reserve_Button"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_round"
            android:text="Bus Reservation"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/Hotel_Book_Button"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_round"
            android:text="Book Hotel"
            android:textColor="#ffffff" />

    </LinearLayout>

</ScrollView>

